{
  "name": "paragraph-manager-frontend",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "build": "react-scripts build",
    "electron": "wait-on http://localhost:3000 && electron .",
    "backend": "python3 ../backend/main.py",
    "dev": "concurrently \"npm run backend\" \"npm run electron\"",
    "dist": "cross-env NODE_OPTIONS=--openssl-legacy-provider npm run build && electron-builder build --mac"
  },
  "build": {
    "appId": "com.example.paragraphmanager",
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
